# BuzzScope Configuration

# API Keys
YOUTUBE_API_KEY=your_youtube_api_key_here
DISCORD_TOKEN=your_discord_token_here

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_notification_email@gmail.com

# MQTT Configuration (for event-driven notifications)
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_USE_TLS=false

# HiveMQ Cloud Configuration (example)
# MQTT_BROKER=your-cluster-id.hivemq.cloud
# MQTT_PORT=8883
# MQTT_USERNAME=your_hivemq_username
# MQTT_PASSWORD=your_hivemq_password
# MQTT_USE_TLS=true

# Platform Configuration
ENABLE_HACKERNEWS=true
ENABLE_REDDIT=true
ENABLE_YOUTUBE=true
ENABLE_DISCORD=true

# Data Collection Settings
DEFAULT_DAYS_BACK=30
MAX_RESULTS_PER_PLATFORM=100
